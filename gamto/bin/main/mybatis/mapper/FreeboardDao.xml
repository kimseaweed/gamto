<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ex.gamto.freeboard.dao.IFreeboardDao">
	<select id="listDao" resultType="com.ex.gamto.freeboard.dto.FreeboardDto">
		select * from free_board where f_delete = '0'
	</select>
	<!-- 선택된 게시판의 상세 정보가 보여지는 페이지 -->
	<select id="viewDao" resultType="com.ex.gamto.freeboard.dto.FreeboardDto">
		select*from free_board where f_seq_number=#{0}
	</select>
	<!-- 게시판 작성 -->
	<insert id="writeDao">
		insert into free_board values(free_board_seq.nextval,#{item1},#{item2},sysdate,sysdate,'img.png',0,0,0,#{item3})
	</insert>
	<!-- 게시판 수정 -->
	<update id="updateDao">
		update free_board set f_title = #{item1}, f_content = #{item2}, f_update_day = sysdate, f_view = f_view-1 where f_seq_number = #{item3}
	</update>
	<!-- 조회수를 카운트하는 update문 -->
	<update id="updateCnt">
		update free_board set f_view = f_view+1 where f_seq_number = #{item1}
	</update>
	<!-- 게시판 좋아요 수가 올라가는 update문 -->
	<update id="goodCnt">
		update  free_board set f_recommend = f_recommend+1, f_view = f_view-1 where f_seq_number = #{item1}
	</update>
	<!-- 삭제를 원하면 삭제 번호가 1로 변경되면서 목록에서는 보이지 않음 -->
	<update id="deleteDao">
		update free_board set f_delete ='1' where f_seq_number = #{item1}
	</update>
	
	<!-- 댓글 리스트 (삭제 번호가 0인 목록) -->
	<select id="cListDao" resultType="com.ex.gamto.freeboard.dto.CommentDto">
		select * from comment_board where c_delete = 0
	</select>
	<!-- 댓글 작성 -->
	<insert id="cWriteDao">
		insert into comment_board values(comment_board_seq.nextval,#{item1},sysdate,sysdate,0,0,0,#{item2})
	</insert>
	<!-- 수정할 댓글 가져오기 -->
	<select id="cViewDao" resultType="com.ex.gamto.freeboard.dto.CommentDto">
		select*from comment_board where c_seq_number=#{0}
	</select>
	<!-- 댓글 수정 -->
	<update id="cUpdateDao">
		update comment_board set c_content = #{item1}, c_update_day = sysdate where c_seq_number = #{item2}
	</update>
	<!-- 댓글 좋아요 수가 올라가는 update문 -->
	<update id="cGoodCnt">
		update comment_board set c_recommend = c_recommend+1 where c_seq_number = #{item1}
	</update>
	<!-- 댓글 싫어요 수가 올라가는 update문 -->
	<update id="cBadCnt">
		update comment_board set c_derecommend = c_derecommend+1 where c_seq_number = #{item1}
	</update>
	<!-- 댓글 삭제를 원하면 삭제 번호가 1로 변경되면서 목록에서는 보이지 않음 -->
	<update id="cDeleteDao">
		update comment_board set c_delete ='1' where c_seq_number = #{item1}
	</update>
</mapper>